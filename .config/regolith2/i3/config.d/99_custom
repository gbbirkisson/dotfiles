## To fix config errors, uninstall regolith-i3-base-launchers:
##   $ sudo apt remove regolith-i3-base-launchers

## Launch // Terminal // <> Enter ##
set_from_resource $i3-wm.binding.terminal i3-wm.binding.terminal Return
bindsym $mod+$i3-wm.binding.terminal exec --no-startup-id gterm

## Launch // Browser // <><Shift> Enter ##
set_from_resource $i3-wm.binding.browser i3-wm.binding.browser Shift+Return
bindsym $mod+$i3-wm.binding.browser exec --no-startup-id gtk-launch $(xdg-settings get default-web-browser)

## Assign common programs to their workspaces
for_window [class="Spotify"] move to workspace $ws8
assign [class="1Password"] $ws9
assign [class="Slack"] $ws10
[pull]
	rebase = false
[push]
	default = simple
[init]
	defaultBranch = main

[alias]
    gone = "!f() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; f"

[includeIf "gitdir:~/repos/oda/**"]
    path = .gitconfig_oda

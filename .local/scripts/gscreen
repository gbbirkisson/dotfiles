#!/usr/bin/env bash

# Manage displays

set -e

SCREENS=(`xrandr --current | sed 's/^\(.*\) connected.*$/\1/p;d'`)

INT="${SCREENS[0]}"
EXT="${SCREENS[1]}"

INT_RES="1920x1080"
EXT_RES="1920x1080"
# EXT_RES="1920x1200"

if [[ -z "$EXT" ]]; then
    # No secondary screen
    xrandr --output "${INT}" --mode ${INT_RES}
else
    xrandr --output "${INT}" --mode ${INT_RES} --output "${EXT}" --mode ${EXT_RES} --right-of "${INT}"
fi

sleep 2
nitrogen --restore
#killall -SIGUSR1 conky

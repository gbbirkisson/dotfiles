#!/usr/bin/env bash

# Manage displays

set -e

SCREENS=(`xrandr --current | sed 's/^\(.*\) connected.*$/\1/p;d'`)

INT="${SCREENS[0]}"
EXT="${SCREENS[1]}"

if [[ -z "$EXT" ]]; then
    # No secondary screen
    xrandr --output "${INT}" --mode 1920x1080
else
    xrandr --output "${INT}" --mode 1920x1080 --output "${EXT}" --mode 1920x1080 --right-of "${INT}"
fi

sleep 2
nitrogen --restore
#killall -SIGUSR1 conky